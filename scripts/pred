            # Run analysis
            results = predictor.run_analysis(time_window_hours=time_window)
            
            if not results.empty:
                print("\n‚úÖ HIGH-FIDELITY ANALYSIS COMPLETE")
                print("\nThis analysis included:")
                print("‚úì Full numerical orbit propagation")
                print("‚úì Comprehensive force modeling (J2, drag, SRP)")
                print("‚úì Covariance matrix propagation with STM")
                print("‚úì Monte Carlo collision probability")
                print("‚úì Analytical probability calculation")
                print("‚úì Professional-grade risk assessment")
            else:
                print("\n‚úÖ No significant collision risks identified")
        else:
            print("\n‚ùå No valid objects to analyze")
    else:
        print("\n‚ùå Failed to load TLE data")


if __name__ == "__main__":
